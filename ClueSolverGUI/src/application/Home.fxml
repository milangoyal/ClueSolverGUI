<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.HomeController">
   <children>
      <Pane layoutX="-8.0" layoutY="-3.0" prefHeight="473.0" prefWidth="652.0">
         <children>
            <ButtonBar layoutX="4.0" layoutY="410.0" prefHeight="27.0" prefWidth="627.0">
              <buttons>
                  <Button fx:id="gameStateButton" mnemonicParsing="false" onAction="#goToGameStateScene" prefHeight="27.0" text="View Game State" />
                <Button fx:id="solutionButton" mnemonicParsing="false" onAction="#goToGameSolutionScene" text="View Game Solution" />
                  <Button fx:id="writeButton" minWidth="0.0" mnemonicParsing="false" onAction="#writeToFile" prefHeight="27.0" prefWidth="175.0" text="Write to File" />
                  <Button fx:id="readButton" mnemonicParsing="false" onAction="#readFromFile" text="Read from File" />
              </buttons>
            </ButtonBar>
            <Label fx:id="label1" alignment="CENTER" contentDisplay="CENTER" layoutX="182.0" layoutY="14.0" prefHeight="17.0" prefWidth="271.0" text="Enter the number of turns to simulate" />
            <TextField fx:id="turnsInput" layoutX="219.0" layoutY="39.0" prefHeight="27.0" prefWidth="114.0" />
            <Button fx:id="simulateButton" layoutX="334.0" layoutY="39.0" mnemonicParsing="false" onAction="#simulate" text="Simulate" />
            <TextArea fx:id="textArea" layoutX="12.0" layoutY="79.0" prefHeight="318.0" prefWidth="636.0" />
         </children>
      </Pane>
   </children>
</AnchorPane>
